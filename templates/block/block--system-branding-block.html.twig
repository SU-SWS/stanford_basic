{%
  set classes = 'su-lockup'
%}

{#
  The variant classes change when there is more than one line to render.
  Add that logic here.
#}

{% if logo.use_default == "0" and logo.path is not empty %}
  {% set link = url('<front>') %}
  {% if link is not empty %}
    <a href="{{ link }}" {{ link_attributes }}>
  {% endif %}
    <img src="{{ logo.path }}" alt="{{ content.site_name }}" />
  {% if link is not empty %}
    </a>
  {% endif %}
{% endif %}

{% if logo.use_default is empty or logo.use_default == "1" %}
  {% if lockup.option is not empty %}
    {% set attributes = attributes.addClass(["su-lockup", "su-lockup--option-" ~ lockup.option]) %}
  {% endif %}

  {# Do not default the line 1 on variant O, S, or T #}
  {% if lockup.option != "o" and lockup.option != "s" and lockup.option != "t" %}
    {% set line1 = content.site_name %}
  {% endif %}

  {% if lockup.line1 is not empty %}
   {% set line1 = lockup.line1 %}
  {% endif %}

  {% set line2 = content.site_slogan %}
  {% if lockup.line2 is not empty %}
   {% set line2 = lockup.line2 %}
  {% endif %}


  {%
    set data = {
    'attributes': attributes|without('class'),
    'modifier_class': attributes.class,
    'link': url('<front>'),
    'line1': line1,
    'line2': line2,
    'line3': lockup.line3,
    'line4': lockup.line4,
    'line5': lockup.line5
    }
  %}

  {% include "@basic-dist/decanter/components/lockup/lockup.twig" with data only %}
{% endif %}
